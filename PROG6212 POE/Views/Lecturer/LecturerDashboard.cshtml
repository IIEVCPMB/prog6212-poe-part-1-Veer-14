@model IEnumerable<PROG6212_POE.Models.Claim>

@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="home-container">
    <div class="center-content">

        <!-- Back Button -->
        <div class="text-center mb-4">
            <a asp-controller="HomePage" asp-action="Index" class="dashboard-btn">← Back</a>
        </div>

        <!-- Page Title -->
        <h1 class="title">Lecturer Dashboard</h1>

        <!-- Create New Claim -->
        <div class="text-center mb-5">
            <a asp-controller="Lecturer" asp-action="NewClaim" class="dashboard-btn">
                + Create New Claim
            </a>
        </div>

        <!-- Claims Table -->
        <div class="table-responsive">
            <table class="table table-bordered text-center align-middle shadow rounded-table">
                <thead class="table-dark">
                    <tr>
                        <th>Claim ID</th>
                        <th>Claim Month</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Total Amount (R)</th>
                        <th>Status</th>
                        <th>Attachments</th>
                        <th>Last Review</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var claim in Model)
                        {
                            var lastReview = claim.Reviews?.OrderByDescending(r => r.ReviewDate).FirstOrDefault();
                            <tr>
                                <td>@claim.ClaimID</td>
                                <td>@claim.ClaimMonth</td>
                                <td>@claim.HoursWorked</td>
                                <td>@claim.HourlyRate</td>
                                <td>@claim.TotalAmount.ToString("C")</td>
                                <td>@claim.Status</td>
                                <td>
                                    @if (claim.Attachments != null && claim.Attachments.Any())
                                    {
                                        foreach (var file in claim.Attachments)
                                        {
                                            <a href="@file.FilePath" target="_blank" class="btn btn-sm btn-outline-dark mb-1">
                                                @file.FileName
                                            </a>
                                            <br />
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No files</span>
                                    }
                                </td>
                                <td>
                                    @if (lastReview != null)
                                    {
                                        <strong>@lastReview.Decision</strong>
                                        <br />
                                        <small>@lastReview.ReviewDate.ToString("dd MMM yyyy")</small>
                                        <br />
                                        <em>@lastReview.Comment</em>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not reviewed</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-muted">No claims available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* Full screen animated gradient background */
    body, html {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(-45deg, #0f0c29, #302b63, #24243e, #4b6cb7);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
        color: white;
    }

    @@keyframes gradientBG {
        0%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }

    }

    .home-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100%;
        padding: 50px 20px;
    }

    .center-content {
        width: 100%;
        max-width: 1200px;
        background-color: rgba(255, 255, 255, 0.05);
        padding: 40px;
        border-radius: 25px;
        backdrop-filter: blur(12px);
        box-shadow: 0 0 30px rgba(0,0,0,0.5);
    }

    .title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 20px;
        letter-spacing: 1px;
        color: #fff;
    }

    .dashboard-btn {
        font-size: 18px;
        font-weight: bold;
        padding: 12px 30px;
        border: 2px solid #fff;
        border-radius: 15px;
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
        cursor: pointer;
        transition: all 0.3s ease;
        margin: 10px 5px;
        text-decoration: none;
        display: inline-block;
    }

        .dashboard-btn:hover {
            background-color: #fff;
            color: #0f0c29;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

    table.table {
        width: 100%;
        border-collapse: separate; /* Needed for rounded corners */
        border-spacing: 0; /* Remove gaps */
        margin-top: 20px;
        color: black; /* Table text color */
    }

        table.table th, table.table td {
            padding: 12px;
            font-size: 15px;
            color: black; /* Table text color */
        }

    .table-dark {
        background-color: rgba(255, 255, 255, 0.1); /* Slightly transparent header */
        color: black;
    }

    table.table tr:hover {
        background-color: rgba(255,255,255,0.2);
        color: black;
        transition: 0.3s;
    }

    /* Rounded table corners */
    .rounded-table {
        border-radius: 15px;
        overflow: hidden; /* Ensures corners are actually rounded */
    }

    .btn-outline-dark {
        color: #fff;
        border-color: #fff;
        padding: 5px 10px;
        font-size: 14px;
        border-radius: 8px;
    }

        .btn-outline-dark:hover {
            background-color: #fff !important;
            color: #0f0c29 !important;
        }
</style>
