@model PROG6212_POE.Models.Claim

@{
    ViewData["Title"] = "Create New Claim";
}

<div class="home-container">
    <div class="center-content text-center">

        <!-- Back Button -->
        <div class="text-center mb-4">
            <a asp-controller="Lecturer" asp-action="LecturerDashboard" class="dashboard-btn">← Back</a>
        </div>

        <!-- Title -->
        <h1 class="title mb-4">Create New Claim</h1>

        
        

        <!-- Form -->
        <form asp-action="NewClaim" method="post" enctype="multipart/form-data" class="mx-auto" style="max-width: 600px; text-align: left;">

            <!-- Claim Month -->
            <div class="mb-3">
                <label class="form-label fw-semibold text-white">Claim Month</label>
                <input asp-for="ClaimMonth" type="text" class="form-control input-field" placeholder="e.g., October 2025" required />
                <span asp-validation-for="ClaimMonth" class="text-danger"></span>
            </div>

            <!-- Hours Worked -->
            <div class="mb-3">
                <label class="form-label fw-semibold text-white">Hours Worked</label>
                <input asp-for="HoursWorked" type="number" class="form-control input-field" placeholder="Enter hours worked" required />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>

            <!-- Hourly Rate -->
            <div class="mb-3">
                <label class="form-label fw-semibold text-white">Hourly Rate (R)</label>
                <input asp-for="HourlyRate" type="number" class="form-control input-field" placeholder="Enter hourly rate" required />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>

            <!-- Notes -->
            <div class="mb-3">
                <label class="form-label fw-semibold text-white">Notes</label>
                <textarea asp-for="Notes" class="form-control input-field" placeholder="Enter additional notes (optional)"></textarea>
            </div>

            <!-- File Upload -->
            <div class="mb-3">
                <label class="form-label fw-semibold text-white">Upload Supporting Document (Optional)</label>
                <input type="file" class="form-control input-field" name="FileUpload" />
                <small class="text-light">Accepted: .pdf, .docx, .xlsx (Max 5MB)</small>
            </div>

            <!-- Submit -->
            <div class="text-center mt-4">
                <button type="submit" class="dashboard-btn">Submit Claim</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

