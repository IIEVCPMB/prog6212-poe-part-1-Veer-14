<Window x:Class="Prog6212___POE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prog6212___POE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- 🎨 Enhanced Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#DDE3EF" Offset="0"/>
                <!-- Soft gray-blue -->
                <GradientStop Color="#F5F7FA" Offset="0.5"/>
                <!-- Soft white-ish center -->
                <GradientStop Color="#FFFFFF" Offset="1"/>
                <!-- Gentle white -->
            </LinearGradientBrush>
        </Grid.Background>

        <!-- 🌈 Floating Blurred Circles for Depth -->
        <!-- Top Left Circle -->
        <Ellipse Width="300" Height="300" Fill="#FF0071E3" Opacity="0.28"
              HorizontalAlignment="Left" VerticalAlignment="Top"
              Margin="-150,-130,0,0">
            <Ellipse.Effect>
                <BlurEffect Radius="80"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Bottom Right Circle -->
        <Ellipse Width="400" Height="400" Fill="#FF00C6FF" Opacity="0.25"
              HorizontalAlignment="Right" VerticalAlignment="Bottom"
              Margin="0,0,-180,-180">
            <Ellipse.Effect>
                <BlurEffect Radius="100"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- NEW Third Circle for Pizzazz (Soft Green/Teal) -->
        <Ellipse Width="250" Height="250" Fill="DarkBlue" Opacity="0.22"
              HorizontalAlignment="Left" VerticalAlignment="Bottom"
              Margin="0,0,0,-80">
            <Ellipse.Effect>
                <BlurEffect Radius="90"/>
            </Ellipse.Effect>
        </Ellipse>
        <Ellipse Width="300" Height="300" Fill="Purple" Opacity="0.40"
      HorizontalAlignment="Right" VerticalAlignment="Top"
      Margin="-150,-130,0,0">
            <Ellipse.Effect>
                <BlurEffect Radius="80"/>
            </Ellipse.Effect>
        </Ellipse>


        <!-- Frame to host all pages -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated"/>
    </Grid>
</Window>
