<Page x:Class="Prog6212___POE.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Prog6212___POE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Grid.Resources>
            <!-- Shared Futuristic Button Style -->
            <Style x:Key="DashboardButtonStyle" TargetType="Button">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                 BorderBrush="{TemplateBinding BorderBrush}"
                                 BorderThickness="{TemplateBinding BorderThickness}"
                                 Background="{TemplateBinding Background}"
                                 CornerRadius="10"
                                 Width="{TemplateBinding Width}"
                                 Height="{TemplateBinding Height}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

            <!-- Back Button -->
            <Button Content="← Back"
                 Width="120" Height="40"
                 Style="{StaticResource DashboardButtonStyle}"
                 Click="Back_Click"
                 HorizontalAlignment="Center"/>

            <!-- Title -->
            <TextBlock Text="Login"
                    FontSize="36"
                    FontWeight="Bold"
                    Foreground="Black"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10"/>

            <!-- Username Field -->
            <StackPanel>
                <TextBlock Text="Email" FontSize="16" FontWeight="SemiBold" Foreground="Black"/>
                <TextBox x:Name="UsernameBox"
                      FontSize="16"
                      Padding="8"
                      BorderBrush="Black"
                      BorderThickness="2"
                      Background="Transparent"
                      Margin="0,5,0,15"/>
            </StackPanel>

            <!-- Password Field -->
            <StackPanel>
                <TextBlock Text="Password" FontSize="16" FontWeight="SemiBold" Foreground="Black"/>
                <PasswordBox x:Name="PasswordBox"
                          FontSize="16"
                          Padding="8"
                          BorderBrush="Black"
                          BorderThickness="2"
                          Background="Transparent"
                          Margin="0,5,0,20"/>
            </StackPanel>

            <!-- Login Button -->
            <Button Content="Log In"
                 Width="200" Height="50"
                 Style="{StaticResource DashboardButtonStyle}"
                 HorizontalAlignment="Center"
                 />
        </StackPanel>
    </Grid>
</Page>
