<Page x:Class="Prog6212___POE.Pages.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Prog6212___POE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Register">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <Grid.Resources>
            <!-- Same Button Style as Login -->
            <Style x:Key="DashboardButtonStyle" TargetType="Button">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Shared TextBox Style (Matches Login Page) -->
            <Style x:Key="RegisterTextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Margin" Value="0,5,0,15"/>
            </Style>

            <Style x:Key="RegisterPasswordBoxStyle" TargetType="PasswordBox">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Margin" Value="0,5,0,25"/>
            </Style>
        </Grid.Resources>

        <StackPanel HorizontalAlignment="Center" Width="400" VerticalAlignment="Center" Background="Transparent">

            <!-- Back Button -->
            <Button Content="← Back"
                Width="120" Height="40"
                Style="{StaticResource DashboardButtonStyle}"
                Click="Back_Click"
                HorizontalAlignment="Center"
                Margin="0,0,0,20"/>

            <!-- Title -->
            <TextBlock Text="Register Account"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

            <!-- First Name -->
            <TextBlock Text="First Name" FontSize="16" FontWeight="SemiBold" Foreground="Black"/>
            <TextBox x:Name="FirstNameBox" Style="{StaticResource RegisterTextBoxStyle}"/>

            <!-- Surname -->
            <TextBlock Text="Surname" FontSize="16" FontWeight="SemiBold" Foreground="Black"/>
            <TextBox x:Name="SurnameBox" Style="{StaticResource RegisterTextBoxStyle}"/>

            <!-- Email -->
            <TextBlock Text="Email" FontSize="16" FontWeight="SemiBold" Foreground="Black"/>
            <TextBox x:Name="EmailBox" Style="{StaticResource RegisterTextBoxStyle}"/>

            <!-- Password -->
            <TextBlock Text="Password" FontSize="16" FontWeight="SemiBold" Foreground="Black"/>
            <PasswordBox x:Name="PasswordBox" Style="{StaticResource RegisterPasswordBoxStyle}"/>

            <!-- Register Button -->
            <Button Content="Register"
                Width="200" Height="50"
                Style="{StaticResource DashboardButtonStyle}"
                HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
