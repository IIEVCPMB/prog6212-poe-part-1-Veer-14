<Page x:Class="Prog6212___POE.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Prog6212___POE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <!-- TOP ROW WITH REGISTER (LEFT) AND LOGIN (RIGHT) -->
        <Grid Margin="20,20,20,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Shared Button Style for Top Buttons -->
            <Grid.Resources>
                <Style x:Key="TopButtonStyle" TargetType="Button">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="12,6"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="Black"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>

            <!-- Register Button (LEFT) -->
            <Button x:Name="RegisterBtn"
                Style="{StaticResource TopButtonStyle}"
                HorizontalAlignment="Left"
                Click="RegisterBtn_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="👤"
                           FontSize="18"
                           Margin="0,0,6,0"
                           VerticalAlignment="Center"/>
                    <TextBlock Text="Register"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Login Button (RIGHT) -->
            <Button x:Name="LoginBtn"
                Style="{StaticResource TopButtonStyle}"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Click="LoginBtn_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🔑"
                           FontSize="18"
                           Margin="0,0,6,0"
                           VerticalAlignment="Center"/>
                    <TextBlock Text="Login"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- CENTER CONTENT -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,20">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="FontSize" Value="24"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="15,10"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Margin="0,0,0,20"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    Width="300" Height="60">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="Black"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>

            <!-- Title -->
            <TextBlock Text="CMCS Dashboard"
                   FontSize="40"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,40"/>

            <!-- Buttons -->
            <Button x:Name="LecturerBtn" Content="Lecturer Dashboard" Click="LecturerBtn_Click"/>
            <Button x:Name="CoordinatorBtn" Content="Coordinator Dashboard" Click="CoordinatorBtn_Click"/>
            <Button x:Name="ManagerBtn" Content="Manager Dashboard" Click="ManagerBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
