<Page x:Class="Prog6212___POE.Pages.CoordinatorDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Prog6212___POE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CoordinatorDashboard">

    <Page.Resources>
        <!-- Global Style for Action Buttons -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"
                             Background="{TemplateBinding Background}"
                             CornerRadius="10"
                             Width="{TemplateBinding Width}"
                             Height="{TemplateBinding Height}">
                            <Border.RenderTransform>
                                <SkewTransform AngleX="0" AngleY="0"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Black"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <!-- Back Button with custom style -->
        <Button Content="← Back" Click="Back_Click" FontSize="24"
              Width="120" Height="40" Margin="0,0,0,20">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                     BorderBrush="{TemplateBinding BorderBrush}"
                                     BorderThickness="{TemplateBinding BorderThickness}"
                                     Background="{TemplateBinding Background}"
                                     CornerRadius="5"
                                     Width="{TemplateBinding Width}"
                                     Height="{TemplateBinding Height}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="Black"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <!-- ✅ Keeps text visible -->
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="Black"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <!-- Dashboard Title -->
        <TextBlock Text="Coordinator Dashboard" FontSize="36" FontWeight="Bold" Foreground="Black"
                HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Margin="20">
            <TextBlock Text="Pending Claims" FontSize="28" FontWeight="Bold" Foreground="Black" Margin="0,0,0,20"/>

            <!-- Claims Table -->
            <Border CornerRadius="8" Background="Black" Padding="2">
                <DataGrid x:Name="ManagerClaimsTable" AutoGenerateColumns="False" HeadersVisibility="Column"
           RowBackground="#1E1E2D" AlternatingRowBackground="#2A2A3B" 
           GridLinesVisibility="None" BorderThickness="0" Foreground="White"
           ColumnHeaderHeight="40" RowHeight="35" CanUserAddRows="False"
           SelectionMode="Single" HorizontalAlignment="Stretch"
           Background="Transparent">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimID}" Width="100"/>
                        <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="150"/>
                        <DataGridTextColumn Header="Date Submitted" Binding="{Binding DateSubmitted}" Width="150"/>
                        <DataGridTextColumn Header="Claim Month" Binding="{Binding ClaimMonth}" Width="120"/>
                        <DataGridTextColumn Header="Hours Worked" Binding="{Binding HoursWorked}" Width="120"/>
                        <DataGridTextColumn Header="Hourly Rate" Binding="{Binding HourlyRate}" Width="120"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="100"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                        <DataGridTextColumn Header="Comments" Binding="{Binding ReviewComments}" Width="200"/>
                    </DataGrid.Columns>

                    <!-- Header Style -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Black"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="10,5"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <!-- Row Hover Effect -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Black"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">

                <!-- Approve Button -->
                <Button Width="150" Height="50" Margin="0,0,20,0" Content="Approve Claim">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="LimeGreen"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Reject Button -->
                <Button Width="150" Height="50" Margin="0,0,20,0" Content="Reject Claim">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- View Details Button (default hover) -->
                <Button Width="150" Height="50" Margin="0,0,20,0" Content="View Details"/>

            </StackPanel>

        </StackPanel>
    </StackPanel>
</Page>
